<% if (page.total !== 1) { %>
    <div class="pagination">
        <% if (page.current !== 1) { %>
        <a class="link prev" href="<%= page.prev === 1 ? "/" : "/page/" + page.prev %> ">上一页</a>
        <% } %>
        <% if (page.current !== page.total) { %>
        <a class="link next" href="/<%= page.next_link %> ">下一页</a>
        <% } %>
        <% if (theme.nav?.archives?.status) { %>
        <a class="link center" href="<%= theme.nav.archives.path %> ">归档</a>
        <% } %>
    </div>
<% } %>